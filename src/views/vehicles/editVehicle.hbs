<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>Edit Vehicle</h3>
        </div>
        <div class="card-body">
            <form action="/vehicles/edit/{{vehicle.id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT" >
                <div class="form-group"><input type="text" name="brand" class="form-control" value="{{vehicle.brand}}"></div>
                <div class="form-group"><input type="text" name="model" class="form-control" value="{{vehicle.model}}"></div>
                <div class="form-group"><input type="text" name="color" class="form-control" value="{{vehicle.color}}"></div>
                <div class="form-group"><input type="text" name="price" class="form-control" value="{{vehicle.price}}"></div>
                <div class="form-group"><input type="text" name="url" class="form-control" value="{{vehicle.url}}"></div>
                <div class="form-group"><input type="text" name="description" class="form-control" value="{{vehicle.description}}"></div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>