<div class="row">
  {{#each vehicles}}
    <div class="col-md-12 col-lg-4 mb-5">
      <div class="card">
        <img style="height:230px;" class="card-img-top" src="{{url}}" alt="Card image cap" />
        <div class="card-body">
          <h5 class="card-title d-flex justify-content-between">{{brand}}
            {{model}}
          </h5>
          <p class="card-text">{{description}}</p>
        </div>
        <div class="card-header">
          Specifications
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Brand: {{brand}}</li>
          <li class="list-group-item">Model: {{model}}</li>
          <li class="list-group-item">Color: {{color}}</li>
          <li class="list-group-item">Price: {{price}}</li>
        </ul>

        <form action="/Catalogue/vehicle/{{_id}}" method="GET">
          <button type="submit" class="btn btn-danger btn-block btn-sm">More</button>
        </form>
      </div>
    </div>
  {{/each}}
</div>